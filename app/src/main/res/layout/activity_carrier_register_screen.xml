<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/roadback"
    tools:context=".CarrierRegisterScreen">

    <TextView
        android:id="@+id/textView"
        android:layout_width="148dp"
        android:layout_height="90dp"
        android:fontFamily="@font/alata"
        android:text="Kaydol"
        android:textColor="#9EF29359"
        android:textSize="44sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.73"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.173" />

    <EditText
        android:textColorHint="#9EF29359"
        android:id="@+id/carrierName"
        android:layout_width="244dp"
        android:layout_height="48dp"
        android:ems="10"
        android:fontFamily="@font/alata"
        android:hint="Ad"
        android:inputType="textCapSentences"
        android:textColorHighlight="#56F29359"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.359"
      />
    <EditText
        android:id="@+id/carrierSurname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/alata"
        android:hint="Soyad"
        android:textColorHint="#9EF29359"
        android:inputType="textCapSentences"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.467" />

    <EditText
        android:id="@+id/carrierEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/alata"
        android:textColorHint="#9EF29359"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.557" />

    <EditText
        android:id="@+id/carrierPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColorHint="#9EF29359"

        android:ems="10"
        android:fontFamily="@font/alata"
        android:hint="*******"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.664" />
    <EditText
        android:id="@+id/carrierPasswordCheck"
        android:layout_width="wrap_content"
        android:textColorHint="#9EF29359"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/alata"
        android:hint="Password"
        app:passwordToggleEnabled="true"

        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.772" />



    <Button
        android:id="@+id/buttonKaydol"
        android:layout_width="352dp"
        android:layout_height="47dp"
        android:background="@color/brandColor"
        android:backgroundTint="#F29359"
        android:fontFamily="@font/alata"
        android:clickable="true"
        android:text="Kaydol"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#F29359"
        android:textColorHint="#F29359"
        android:textColorLink="#F29359"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.945"
        app:strokeColor="#F29359" />
</androidx.constraintlayout.widget.ConstraintLayout>