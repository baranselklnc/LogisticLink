<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D1DEE9"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/carrierAvatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/circular_background"
        android:clickable="true"
        android:contentDescription="Taşıyıcı Avatar"
        android:onClick="onAvatarClick"
        android:src="@drawable/carrier"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/customerAvatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/customerAvatar"
        android:layout_width="104dp"
        android:layout_height="104dp"
        android:background="@drawable/circular_background"
        android:clickable="true"
        android:contentDescription="Müşteri Avatar"
        android:onClick="onAvatarClick"
        android:src="@drawable/customer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/carrierAvatar"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/carrierName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:text="Taşıyıcı"
        android:textColor="#202C39"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.022"
        app:layout_constraintStart_toStartOf="@+id/carrierAvatar"
        app:layout_constraintTop_toBottomOf="@+id/carrierAvatar"
        app:layout_constraintVertical_bias="0.071" />

    <TextView
        android:id="@+id/customerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:text="Müşteri"
        android:textColor="#202C39"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/customerAvatar"
        app:layout_constraintTop_toBottomOf="@+id/customerAvatar"
        app:layout_constraintVertical_bias="0.05" />

</androidx.constraintlayout.widget.ConstraintLayout>
